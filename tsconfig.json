{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "traceResolution": false,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "paths": {
            "@/*": [ "./src/*" ]
        },
        "baseUrl": "./src"
    },
    "include": [
        "./src/**/*"
    ]
}